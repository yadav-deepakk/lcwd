<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean name="seagate" class="spring.core.practice.components.HardDrive" >
		<property name="name" value="seagate hard-drive" />
		<property name="storage" value="1024" />
	</bean>

	<bean name="ideapad" class="spring.core.practice.components.Laptop">
		<property name="name" value="Lenovo Ideapad 320" />
		<property name="hardDrive" ref="seagate" />
	</bean>

</beans>
